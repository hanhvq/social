<?xml version="1.0" encoding="ISO-8859-1" ?>

<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_resources_1_3 http://www.gatein.org/xml/ns/gatein_resources_1_3"
    xmlns="http://www.gatein.org/xml/ns/gatein_resources_1_3">

  <portlet-skin>
    <application-name>social-juzu</application-name>
    <portlet-name>NotificationSettingsPortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/css/notification.css</css-path>
    <css-priority>1</css-priority>
  </portlet-skin>

  <portlet-skin>
    <application-name>social-juzu</application-name>
    <portlet-name>StatusProfilePortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/css/userProfile.css</css-path>
    <css-priority>1</css-priority>
  </portlet-skin>

  <portlet-skin>
    <application-name>social-juzu</application-name>
    <portlet-name>ActionProfilePortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/css/userProfile.css</css-path>
    <css-priority>1</css-priority>
  </portlet-skin>
  
  <portlet-skin>
    <application-name>social-juzu</application-name>
    <portlet-name>MiniConnectionsPortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/css/userProfile.css</css-path>
    <css-priority>1</css-priority>
  </portlet-skin>
  
  <portlet-skin>
    <application-name>social-juzu</application-name>
    <portlet-name>UserProfilePortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/css/userProfile.css</css-path>
    <css-priority>1</css-priority>
  </portlet-skin>
  
  <portlet-skin>
    <application-name>social-juzu</application-name>
    <portlet-name>BasicProfilePortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/css/userProfile.css</css-path>
    <css-priority>1</css-priority>
  </portlet-skin>
    
  <portlet-skin>
    <application-name>social-juzu</application-name>
    <portlet-name>RecentActivitiesPortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/css/userProfile.css</css-path>
    <css-priority>1</css-priority>
  </portlet-skin>

  <portlet>
    <name>NotificationSettingsPortlet</name>
    <module>
      <script>
        <path>/js/notification/notification.js</path>
      </script>
      <depends>
        <module>juzu-ajax</module>
      </depends>
      <depends>
        <module>socialUtil</module>
      </depends>
      <depends>
        <module>jquery</module>
        <as>jq</as>
      </depends>
    </module>
  </portlet>

  <portlet>
    <name>ActionProfilePortlet</name>
    <module>
      <script>
        <path>/js/user-profile/actionProfilePortlet.js</path>
      </script>
      <depends>
        <module>juzu-ajax</module>
      </depends>
      <depends>
        <module>jquery</module>
        <as>jq</as>
      </depends>
    </module>
  </portlet>
   
</gatein-resources>
